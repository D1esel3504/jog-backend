{
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "baseUrl": ".",
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@src/*": ["src/*"]
          },
        "typeRoots" : ["./src/types", "./node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/node_modules/*", "**/*.spec.ts"]
}